<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headingText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
    </style>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>
    <style name="buttonTransform">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
    </style>
    <style name="buttonNumber">
        <item name="android:maxAspectRatio">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
    </style>
    <style name="buttonNumberZero">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom"></item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
    </style>
    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
        <item name="android:onClick">operationAction</item>
    </style>
    <style name="buttonOperatorEqualTo" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">equalAction</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:fontFamily">@font/sfsemibold</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

</resources>